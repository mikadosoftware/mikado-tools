#!/usr/bin/env python
#! -*- coding:utf-8 -*-

from docopt import docopt
from mikado.tools import testtool

DOCOPT = """mikado.tools

Usage:
    testtool <rootpath>

Options:
    -h --help Show this
    -d --docs Show docs

"""

def run(args):
    
    testtool.run(args['<rootpath>'])    


def main():
    args = docopt(DOCOPT)
    run(args)

if __name__ == '__main__':
    main()
